<% provide(:title, "Все пользователи") %>

<h1>Все пользователи</h1>

<ul class="users">
  <% @users.each do |user| %>
  	<li>
  	  <%= link_to user.name, user %>
  	  <% if current_user.admin? %>
  	    | <%= link_to "удалить", user, method: :delete, data: { confirm: "Уверен?" } %>
  	  <% end %>
  	</li>
  <% end %>
</ul>

<p><%= link_to "Назад", root_path %></p>